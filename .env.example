# Fuega AI - Environment Variables
# Copy to .env and fill in your values

# === AI ===
ANTHROPIC_API_KEY=sk-ant-your-key-here

# === Database ===
DATABASE_URL=sqlite+aiosqlite:///./data/fuega.db
# For production: postgresql+asyncpg://user:pass@localhost:5432/fuega

# === Redis ===
REDIS_URL=redis://localhost:6379/0

# === Social APIs ===
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_SECRET=
BUFFER_ACCESS_TOKEN=

# === Email ===
RESEND_API_KEY=

# === Media ===
ELEVENLABS_API_KEY=
PEXELS_API_KEY=

# === Google ===
YOUTUBE_API_KEY=
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# === WordPress (optional) ===
WORDPRESS_URL=
WORDPRESS_USERNAME=
WORDPRESS_APP_PASSWORD=

# === OpenAI (image generation - optional) ===
OPENAI_API_KEY=

# === Dashboard ===
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8000

# === Server ===
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:5173"]
ENVIRONMENT=development
LOG_LEVEL=INFO
